<Window x:Name="wndMain" x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TeamManagement" Height="720" Width="1280" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu x:Name="mbMain" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1272">
            <MenuItem Header="Datei">
                <MenuItem Header="DB öffnen"/>
                <Separator/>
                <MenuItem Header="Beenden"/>
            </MenuItem>
            <MenuItem Header="Test">
                <MenuItem Header="TestRegionen Erstellen" x:Name="cmdRegionenTest"/>
            </MenuItem>
        </Menu>
        <TabControl HorizontalAlignment="Left" Height="671" Margin="0,21,0,0" VerticalAlignment="Top" Width="1264">
            <TabItem Header="Regionen">
                <ScrollViewer Margin="0,0,-1,0">
                    <StackPanel x:Name="stkRegionen" HorizontalAlignment="Left" Height="644" VerticalAlignment="Top" Width="1264" Margin="0,0,-10,-4"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Teams">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Spieler"/>
            <TabItem Header="Rollen"/>
            <TabItem Header="Spiele"/>
            <TabItem Header="Tabelle"/>

        </TabControl>
    </Grid>
</Window>
